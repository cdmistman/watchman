# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.go]
indent_style = tab

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[makefile]
indent_style = tab

[LICENSE]
charset = unset
end_of_line = unset
indent_size = unset
indent_style = unset
insert_final_newline = unset
max_line_length = unset
tab_width = unset
trim_trailing_whitespace = unset
